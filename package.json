{
  "name": "engcard-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for learning English",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build:server && npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "server": "node server.mjs",
    "start": "npm run build:all && npm run server",
    "bot": "node bot.js",
    "init-db": "node scripts/init-database.js",
    "migrate": "node scripts/migrate-to-database.js",
    "migrate-all": "node scripts/run_migrations.js",
    "setup": "npm run migrate-all && npm run server"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "@types/styled-components": "^5.1.34",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "effector": "^22.8.0",
    "effector-react": "^22.5.0",
    "express": "^5.1.0",
    "lucide-react": "^0.294.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.19",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
